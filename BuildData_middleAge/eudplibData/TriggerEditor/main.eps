import PluginVariables as msqcvar;
import Systems.map_manager as mmgr;
import Units.unit_operation as unitop;

var addr, ptrAddr, patternAddr, num;
var pChat;//, chat

const nums_ = PVariable();
const patternAction_ = PVariable();
